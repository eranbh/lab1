# my own ls
alias ll='ls -alFhG'

# go to work :)
alias gtw="cd $WORK"

# go to my lab
alias gtl="cd $WORK/lab"

# open emacs no windows of course
alias se="emacs -nw > /dev/null 2>&1"

# go to general log area
alias gtla="cd $LOG_AREA"

# go to Downloads
alias gtd="cd $HOME/Downloads"

#clear the screen
alias c="clear"

# i need this for the fucking mac to work.
# for some reason I cant touch the vi exe
alias "vi=vim"

# fire up vi editor
alias "v=vim"

# fires up vim for a vertical viewing
# this can be useful for header/src couples
alias "vih=vim -O "

# fire up less viewer
alias "l=less"

# fire up make [pwd]
alias "m=make"

# vim an entire folder into tabs
alias "vt=vim -p *"

# cpu consumption by process [top 5]
alias cpuc="ps aux | sort -nrk 3,3 | head -n 5"

# untar a tar.bz file
alias utbz="tar xvjf"

# untar a tar.gz file
alias utgz="tar xvzf"

## git related

alias gb="git branch"
alias gf="git fetch"
alias gr="git rebase"
alias gl="git log"
alias gs="git status"
alias gd="git diff"
alias ga="git add"
alias gc="git commit -a" # with adding

# vagrant related
alias vu="vagrant up"
alias vd="vagrant destroy"
alias vs="vagrant ssh"
alias vh="vagrant halt"
alias vr="vagrant reload"

# sentinel related
alias gtse="cd /Volumes/Users/eranb"
alias gtsp="cd /Volumes/Users/Public"
alias gts1="cd $S1_LIN_AGENT"
